<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activity_editar_livro">

        <TextView
            style="@style/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editar_livro" />

        <EditText
            android:id="@+id/et_editar_titulo"
            style="@style/editTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/titulo"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_editar_descricao"
            style="@style/editTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descricao"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_editar_foto"
            style="@style/editTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/foto" />

        <Button
            android:id="@+id/btn_editar_livro"
            style="@style/butonForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnEditarLivro" />

    </LinearLayout>

</ScrollView>